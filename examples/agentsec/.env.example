# =============================================================================
# Environment Variables for agentsec Examples
# =============================================================================

# AI Defense API Mode
AI_DEFENSE_API_MODE_LLM_API_KEY=your-ai-defense-llm-api-key
AI_DEFENSE_API_MODE_MCP_API_KEY=your-ai-defense-mcp-api-key

# AI Defense Gateway Mode - Azure OpenAI
# Note: OPENAI_API_KEY (below) is used for both direct API calls and gateway mode
AGENTSEC_AZURE_OPENAI_GATEWAY_API_KEY=your-azure-openai-gateway-key

# AI Defense Gateway Mode - Cohere
AGENTSEC_COHERE_GATEWAY_API_KEY=

# AI Defense Gateway Mode - Mistral
AGENTSEC_MISTRAL_GATEWAY_API_KEY=

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key

# Azure OpenAI
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-azure-openai-key
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o
AZURE_OPENAI_API_VERSION=2024-08-01-preview

# AWS Bedrock
AWS_AUTH_METHOD=profile
AWS_REGION=us-east-1
AWS_PROFILE=default
AGENTSEC_BEDROCK_GATEWAY_URL=https://your-bedrock-gateway-url

# GCP Vertex AI
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
GOOGLE_CLOUD_LOCATION=us-central1
GOOGLE_AI_SDK=vertexai

# Cohere (not configured)
COHERE_API_KEY=

# Mistral (not configured)
MISTRAL_API_KEY=

# Azure AI Foundry Deployment
AZURE_TENANT_ID=
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=
AZURE_SUBSCRIPTION_ID=
AZURE_RESOURCE_GROUP=
AZURE_AI_FOUNDRY_PROJECT=
AZURE_AI_FOUNDRY_ENDPOINT=
AZURE_ACR_NAME=
AZURE_ACR_LOGIN_SERVER=
AZURE_FUNCTION_APP_NAME=
AZURE_STORAGE_ACCOUNT=
MCP_SERVER_URL=https://remote.mcpservers.org/fetch/mcp

# GCP Deployment
GKE_AUTHORIZED_NETWORKS=YOUR_PUBLIC_IP/32
